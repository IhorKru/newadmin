{% block custjs %}
<!-- date time picker -->
    <script src="{{ asset('resources/vendors/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js')}}"></script>
<!-- Email form fields -->
    <script src="{{ asset('resources/build/js/publisher.js')}}"></script>
    <script>
        //submitting the form
        $("#emailcampform").submit(function(e) {
            e.preventDefault();
            if ( $("#progress_show").css('display') == 'none' ){
                $("#progress_show").show(); //showing progress bar
                $("#progress_bar").attr("aria-valuemin", "0%"); //assigning initial value to progress bar
            } else {
                $("#progress_bar").attr("style", "width: 0%");
                $("#progress_bar").attr("aria-valuenow", "0%");
            }
            var $form = $(e.currentTarget);
            var formSub = function () {
                $.ajax({
                    url: $form.attr('action'),
                    method: 'POST',
                    data: $form.serialize(),
                    timeout: 1000
                });
            };
            formSub();
            var emailstosend = document.getElementById("campaign_input_numemails").value; //getting count of emails to be sent out
            var timeOutId = 0;
            //getting current max campaigns
            var initCamp = function () {
                $.ajax({
                    type: "GET",
                    url: "{{ path('progbar') }}",
                    dataType: "json",
                    cache: false,
                    success: function(response) {
                        initusers = response[0];
                        initerrors = response[1];
                        console.log(response);
                        var ajaxFn = function() {
                            var currcount = "0%";
                            $.ajax({
                                type: "GET",
                                url: "{{ path('progbar') }}",
                                dataType: "json",
                                success: function(response) {
                                    curusers = response[0];
                                    curerrors = response[1];
                                    userprog = Math.floor(Number(curusers) - Number(initusers));
                                    errorprog = Math.floor(Number(curerrors) - Number(initerrors));
                                    progress = Math.floor((Number(userprog) + Number(errorprog)) / Number(emailstosend) * Number(100)) + "%";
                                    $("#progress_bar").attr("style", "width: " + progress);
                                    $("#progress_bar").attr("aria-valuenow", progress);
                                    document.getElementById("progress_bar").innerHTML = "Running - " + progress;
                                    if(progress >= '97%'){
                                        $("#progress_bar").attr("style", "width: 100%");
                                        $("#progress_bar").attr("aria-valuenow", "100%");
                                        document.getElementById("progress_bar").innerHTML = "Completed - 100% - " + (Number(curusers) - Number(initusers)) + " emails";
                                        var cdAjax = function () {
                                            $.ajax({
                                                type: "GET",
                                                url: "{{ path('campstats') }}",
                                                dataType: "html",
                                                success: function(response) {
                                                    if(response.length != 0) {
                                                        $('#campstats').html(response);
                                                    } else {
                                                        timeOutId = setTimeout(cdAjax, 1000);
                                                    }
                                                },
                                                error: function(result) {
                                                    console.log('error');
                                                }
                                            });
                                        }
                                        cdAjax();
                                    } else {
                                        timeOutId = setTimeout(ajaxFn, 3000);//set frequnecy of updating progress bar
                                    }
                                    prevprogress = progress;
                                },
                                error: function(result) {
                                    console.log('error');
                                }
                            });
                        }
                        ajaxFn();
                    },
                    error: function(response) {
                        console.log(response);
                    }
                });
            };
            initCamp();
        });
        //js for progress bar to be shown
    </script>

{% endblock %}